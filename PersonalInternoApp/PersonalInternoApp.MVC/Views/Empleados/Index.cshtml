

@model List<PersonalInternoApp.Entities.Empleado>

@{ 
    ViewBag.Title = "Empleados";
}

<h1>Personal Interno App</h1>

<table class="table">

    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var empleado in Model)
        {
        <tr>

            <th scope="row">@empleado.EmpleadoID</th>
            <td>@empleado.Nombre</td>
            <td>@empleado.Apellido</td>
            <td>@Html.ActionLink("Detalle", "InsertUpdate", new { id = empleado.EmpleadoID }, new { @class = "btn btn-primary" })</td>

        </tr>
        }
    </tbody>
</table>

<div>

    @Html.ActionLink("Agregar Empleado", "InsertUpdate",null, new { @class = "btn btn-primary" })
</div>




