

@model PersonalInternoApp.MVC.Models.EmpleadoView

@{
    ViewBag.Title = "Empleados";
}

<h1>Agregar Empleado</h1>

<br>

@using (Html.BeginForm("InsertUpdate", "Empleados", FormMethod.Post))
{
    @Html.HiddenFor(c => c.EmpleadoID);

    <form>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Apellido</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Apellido)
                @Html.ValidationMessageFor(c => c.Apellido, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Nombre)
                @Html.ValidationMessageFor(c => c.Nombre, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">DNI</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Dni)
                @Html.ValidationMessageFor(c => c.Dni, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Email)
                @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Celular</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Celular)
                @Html.ValidationMessageFor(c => c.Celular, "", new { @class = "text-danger" })
            </div>
        </div>

        <br>
        <div class="form-group row">
            <input type="submit" class="btn btn-success" value="Guardar" onclick="return confirm('Confirme para guardar')" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </div>

    </form>


}
